<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/view_movie_iv"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/view_movie_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingEnd="80dp"
        android:paddingLeft="20dp"
        android:paddingRight="80dp"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/view_movie_iv"/>

    <TextView
        android:id="@+id/view_movie_tv_vote"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textColor="@color/movieAppTextLight"
        android:textSize="20dp"
        android:transitionName="tv_vote"
        app:layout_constraintBottom_toBottomOf="@+id/view_movie_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_movie_iv"/>

</android.support.constraint.ConstraintLayout>