<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/view_movie_iv"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/view_movie_tv_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        app:layout_constraintTop_toBottomOf="@+id/view_movie_iv"
        app:layout_constraintBottom_toBottomOf="@+id/view_movie_tv_vote"/>

    <TextView
        android:id="@+id/view_movie_tv_vote"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="9.1"
        app:layout_constraintTop_toBottomOf="@+id/view_movie_iv"
        app:layout_constraintRight_toRightOf="parent"/>

</merge>